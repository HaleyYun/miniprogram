/* packageTrain/pages/record/index.wxss */
.page{
  background: url('https://neuroweave.oss-cn-hangzhou.aliyuncs.com/zskj-app-test/img/background1.png') #f9f9f9 no-repeat center top;
  background-size: contain;
  width: 100%;
  background: #F3F4F6;
}
.load{
  height: 582rpx;
  width: 100%;
  margin-top: 20vh;
}
.doctor-box{
  width: fit-content;
  margin: 0 auto;
  margin-top: 200rpx;
  display: flex;
  flex-direction: column;
}
.doctortext{
  margin-top: 50rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #666666;
  text-align: center;
}
.doctor{
  width: 378rpx;
  height: 320rpx;
  margin: 0 auto;
  transform: translate(-60rpx);
}
.info{
  display: flex;
  height: 200rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
  white-space: nowrap;
  align-items: center;
}
.addinfobg{
  width: 582rpx;
  height: 650rpx;
}
.addinfobut-box{
  height: 0;
  position: relative;
}
.addinfobut{
  position: absolute;
  top: -164rpx;
  left: 44rpx;
  width: 498rpx;
  height: 122rpx;
}
.van-scale-enter-to{
  width: fit-content !important;
}
.van-popup {
  border-radius: 24px !important;
}
.img{
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #3B3A3A;
  margin: 0 15rpx;
  display: inline-block;
}
.bg{
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}
.name{
  display: flex;
  justify-content: center;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #3B3A3A;
}
.namee{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.namee-name{
  display: flex;
  align-items: center;
}
.namee-text{
  font-size: 36rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: #222222;
  margin-left: 10rpx;
}
.mild-image{
  height: 42rpx;
  margin-right: 10rpx;
}
.updown{
  width: 26rpx;
  height: 26rpx;
  margin-left: 6rpx;
}
.state{
  width: 686rpx;
  padding: 26rpx;
  margin: 20rpx auto;
  background: white;
  box-sizing: border-box;
  border-radius: 20rpx;
}
.state-number{
  width: 628rpx;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 12rpx;
  color: #222222;
  display: flex;
  align-items: center;
  padding: 16rpx 0 16rpx 20rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
}
.state-backgroundColor1{
  background: #FEF8F4;
}
.state-backgroundColor2{
  background: #F4F5FE;
}
.state-backgroundColor3{
  background: #F4F4F4;
}
.OpenClos{
  font-size: 24rpx;
  font-weight: bold;
  color: #505050;
  display: flex;
  align-items: center;
}
.state-tate{
  font-size: 48rpx;
  font-weight: 600;
  color: #B6B6B6;
}
.state-date{
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
}
.intervention{
  width: 686rpx;
  background: #FFFFFF;
  border-radius: 20rpx 20rpx 0 0 ;
  margin: 20rpx auto 0;
  padding: 30rpx 30rpx 0 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.section{
  width: 184rpx;
  height: 52rpx;
  background: #F8F6F6;
  border-radius: 32rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #222222;
  line-height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/*  */
.van-tab--active{
  background-image: linear-gradient(#e2f7ff,#FFF,#FFF);
  border-radius: 20rpx 20rpx 0 0;
  box-shadow: 0rpx 0rpx 20rpx 0rpx gainsboro;
}
.van-tabs__line{
  display: none;
}
.van-tabs__nav{
  padding-top: 10rpx;
}
.tab{
  width: 686rpx;
  margin: 0 auto;
  background-color: white;
  border-radius: 0 0 20rpx 20rpx;
}
/*  */
.tab-content{
  position: relative;
}
.training-brief-title{
  font-size: 32rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: #222222;
  line-height: 44rpx;
  padding: 10rpx;
}
.tab-list{
  display: flex;
  flex-direction: column;
}
.tab-list-content{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.tab-list-one{
  width: 572rpx;
  height: 88rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 36rpx;
  box-sizing: border-box;
  margin: 20rpx 8rpx 20rpx 0;
}
.tab-list-before{
  height: 18rpx;
  width:18rpx;
  border-radius: 50%;
  margin-left: 7rpx;
}
.statistics{
  width: 686rpx;
  background-color: white;
  margin: 0 auto; 
  border-radius: 10px;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.statistics-title{
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0 0 0;
}
.statistics-title-t{
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 36rpx 0 0 0;
}
.statistics-day{
  display: flex;
  justify-content: center;
  height: 150rpx;
}
.statistics-round-margin{
  width: 270rpx;
  height: 270rpx;
  border-radius: 50%;
  z-index: 9;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}
.border{
  border: 2px solid #4883F4;
}
.duihao{
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  position: relative;
  left: -30rpx;
  top: -10rpx;
}
.imgimg{
  width: 96rpx;
  height: 114rpx;
}
.statistics-round{
  width: 230rpx;
  height: 230rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.training-days{
  font-size: 36rpx;
  font-family: MiSans-Bold, MiSans;
  font-weight: bold;
  color: #222222; 
  line-height: 48rpx;
}
.training-days-suffix{
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #222222;
  line-height: 34rpx;
}
.statistics-underway{
  height: 164rpx;
  background-color: #F1F6FF;
  background-size: cover;
  border-radius: 10rpx;
}
.title{
font-size: 28rpx;
font-family: PingFang-SC-Bold, PingFang-SC;
font-weight: bold;
line-height: 40rpx;
}
.qualified{
  font-size: 20rpx;
}
.duration-quantity{
  display: flex;
  justify-content: space-between;
}
.duration-quantity-label{
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #222222;
  line-height: 34rpx;
}
.duration-quantity-label::before {
  content: " ";
  position: absolute;
  left: -10rpx;
  height: 16rpx;
  width: 5rpx;
  border-radius: 2rpx;
  margin-top: 8rpx;
  background-color: #5084FD;
}
.pullDown{
  width: 26rpx;
  height: 26rpx;
  margin-left: 24rpx;
}
.c{
  display: flex;
  align-items: center;
  justify-content: center;
}
.duration,
.quantity{
  position: relative;
  margin: 45rpx;
}
.duration-quantity-number{
  font-size: 32rpx;
  font-family: MiSans-Bold, MiSans;
  font-weight: bold;
  color: #222222;
  line-height: 44rpx;
}






