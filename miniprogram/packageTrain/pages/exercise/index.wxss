/* packageTrain/pages/exercise/index.wxss */
.page{
  background: #F5F6FA;
}
.load{
  height: 582rpx;
  width: 100%;
  margin-top: 25vh;
}
.exercise{
  width: 694rpx;
  height: 280rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin: 18rpx auto;
  padding: 30rpx 26rpx 30rpx 24rpx;
  box-sizing: border-box;
  display: flex;
}
.exercise-img{
  width: 236rpx;
  height: 220rpx;
  border-radius: 16rpx;
}
.exercise-content{
  flex-grow: 1;
  width: 392rpx;
  margin-left: 20rpx;
}
.exercise-title{
  font-size: 28rpx;
  font-weight: bold;
  color: #444444;
  line-height: 40rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.exercise-description{
  width: 388rpx;
  height: 105rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: #666666;
  margin-top: 2rpx;
  line-height: 28rpx;
  -webkit-line-clamp: 4;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.record-box{
  margin: 16rpx 0 0 0;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.record{
  width: 172rpx;
  height: 60rpx;
  background: #3E76F5;
  border-radius: 30rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}