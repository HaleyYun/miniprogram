.page{
  width: 100%;
  background: #F3F4F6;
}
.syst-info {
  width: 604rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 2rpx 30rpx 0rpx rgba(0, 0, 0, 0.05);
  border-radius: 20rpx;
  margin: 20rpx auto 0;
  padding: 25rpx 44rpx;
}

.syst-title {
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
}

.line {
  width: 8rpx;
  height: 28rpx;
  background: #3476FF;
  border-radius: 4rpx;
  margin: -1rpx 12rpx 0 0;
}

.line-text {
  font-size: 32rpx;
  font-family: PingFang-SC, PingFang-SC;
  font-weight: bold;
  color: #222222;
}

.syst-content {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.syst-content-left:nth-child(1) {
  margin-right: 98rpx;
}

.cont-text {
  font-size: 28rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  color: #949498;
}

.cont-info {
  font-size: 28rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 600;
  color: #222222;
}

.link {
  width: 645rpx;
  height: 85rpx;
  background: #FFF;
  box-shadow: 0rpx 2rpx 10rpx 0rpx rgba(0, 0, 0, 0.05);
  border-radius: 10px;
  margin: 20rpx auto;
  line-height: 85rpx;
  padding: 0rpx 25rpx;
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.link-left {
  display: flex;
  align-items: center;
}

.link-left image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 10rpx;
}

.name {
  color: #222;
  font-weight: bold;
}

.phone {
  color: #575B66;
}

.img {
  width: 32rpx;
  height: 32rpx;
}

.button {
  width: 700rpx;
  height: 98rpx;
  position: fixed;
  bottom: 50rpx;
  left: 25rpx;
  background: #3476FF;
  border-radius: 49rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
}


.model {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(16, 16, 16, 0.69);
  z-index: 9999;
}

.model-info {
  width: 602rpx;
  height: 522rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  position: absolute;
  top: 400rpx;
  left: 65rpx;
}

.title {
  margin: 36rpx auto;
  text-align: center;
}

.content {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 20rpx 34rpx;
  font-size: 26rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  color: #656565;
}



.content-input {
  width: 370rpx;
  height: 76rpx;
  padding: 0 15rpx;
  background: rgba(216, 216, 216, 0.19);
  border-radius: 16rpx;
  opacity: 0.72;
  border: 2rpx solid rgba(151, 151, 151, 0.24);
  display: flex;
  align-items: center;
}

.password-icon {
  width: 40rpx;
  height: 40rpx;
}

.btn-box {
  display: flex;
  justify-content: center;
  margin-top: 45rpx;
  padding: 0 20rpx;
}

input[type=text] {
  color: #222;
}

input[type=password] {
  color: #222;
}

.clean {
  width: 246rpx;
  height: 76rpx;
  border-radius: 16rpx;
  border: 1rpx solid #BABABA;
  line-height: 76rpx;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFang-SC, PingFang-SC;
  font-weight: bold;
  color: #222222;
}

.confim {
  width: 246rpx;
  height: 76rpx;
  line-height: 76rpx;
  background: #3476FF;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-family: PingFang-SC, PingFang-SC;
  font-weight: bold;
  color: #FFFFFF;
  text-align: center;
  margin-left: 20rpx;
}