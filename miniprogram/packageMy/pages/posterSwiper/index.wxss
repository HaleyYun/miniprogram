.page {
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(16, 16, 16, 0.69);
  z-index: 2;
}

.swiper-container {
  width: 592rpx;
  height: 1048rpx;
  background: #FAFAFA;
  border-radius: 32rpx;
  z-index: 3;
  margin: 70rpx auto;
}

.swiper-box {
  border-radius: 32rpx;
}

image {
  width: 100%;
  height: 100%;
  border-radius: 32rpx;
}

.btn-box {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 270rpx;
  border-radius: 45rpx 45rpx 0rpx 0rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.btn-box image {
  width: 102rpx;
  height: 100rpx;
}

.btn-text {
  font-size: 22rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  color: #222222;
  line-height: 32rpx;
  margin-top: 8rpx;
}

.btn {
  position: relative;
  width: 90%;
  top: 300px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  /* justify-content: space-around; */
  z-index: 9;
}

.arrow-left {
  width: 80rpx;
  height: 80rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 2rpx 8rpx 2rpx rgba(0, 0, 0, 0.08);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 0;
}

.img-left {
  transform: rotateY(180deg)
}

.arrow-right {
  width: 80rpx;
  height: 80rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 2rpx 8rpx 2rpx rgba(0, 0, 0, 0.08);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 0;
}

.btn image {
  width: 44rpx;
  height: 44rpx;
  margin-left: 10rpx;
}

.btn image:nth-child(1) {
  margin-right: 10rpx;
}

.noSwiper {
  display: flex;
  height: 70vh;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.noSwiper image {
  width: 458rpx;
  height: 458rpx;
}

.noText {
  font-size: 28rpx;
  font-family: PingFang-SC, PingFang-SC;
  font-weight: bold;
  color: #A4A4A4;
  margin-top: 22rpx;
}