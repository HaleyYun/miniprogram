.page {
  height: 100%;
  background: #F3F4F6;
}

.box-list {
  padding: 30rpx;
  background: #fff;
  margin: 28rpx 30rpx 0;
  border-radius: 16rpx;
}

.list-title {
  display: flex;
  align-items: center;
  margin: 4rpx 0;
}

image {
  width: 90rpx;
  height: 42rpx;
  margin-right: 8rpx;
}

.list-time {
  font-size: 26rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  color: #838383;
  line-height: 36rpx;
}

.list-content {
  padding: 30rpx;
  background: #F4F5FE;
  border-radius: 12rpx;
  opacity: 0.46;
}

.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color:#666;
}