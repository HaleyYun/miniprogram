.page {
  width: 100%;
  background: #F3F4F6;
}

.search {
  padding: 38rpx 0 24rpx 0;
}

.doctor-box {
  width: fit-content;
  margin: 0 auto;
  margin-top: 200rpx;
  display: flex;
  flex-direction: column;
}

.load {
  height: 582rpx;
  width: 100%;
  margin-top: 10vh;
}

.doctortext {
  margin-top: 50rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #666666;
  text-align: center;
}

.doctor {
  width: 378rpx;
  height: 320rpx;
  margin: 0 auto;
  transform: translate(-60rpx);
}

.search-input {
  width: 686rpx;
  height: 72rpx;
  background: #FFFFFF;
  border-radius: 36rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.input {
  width: 450rpx;
  margin-right: 20rpx;
  color:#666;
}

.search-image {
  width: 34rpx;
  height: 34rpx;
  margin: 0 20rpx;
}

.exchange {
  width: 138rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
  border-radius: 36rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: #ffffff;
  margin-right: 6rpx;
  background: #3476FF;
}

.head {
  padding: 0 30rpx;
}

.title {
  font-size: 32rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: #222222;
  margin-bottom: 16rpx;
}

.tab {
  width: 686rpx;
  height: 68rpx;
  background: linear-gradient(180deg, rgba(153, 204, 255, 0.09) 0%, rgba(96, 157, 255, 0.09) 100%);
  border-radius: 16rpx;
  border: 1rpx solid #A3D4FF;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 3rpx;
  margin-bottom: 32rpx;
}

.tab-option {
  width: 152rpx;
  height: 61rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tab-option:nth-child(1) {
  margin-left: 3rpx;
}

.tab-option:nth-child(4) {
  margin-right: 3rpx;
}

.tab-option-active {
  background: #FFFFFF;
  box-shadow: 0rpx 0rpx 8rpx 2rpx rgba(153, 153, 153, 0.08);
}

.setMeal {
  width: 686rpx;
  background-color: white;
  /* background: #ccc; */
  margin: 0 auto;
  box-sizing: border-box;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  padding-bottom: 32rpx;
  border-radius: 48rpx;
}

.setMeal-title {
  width: 686rpx;
  height: 118rpx;
  font-size: 36rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  position: relative;
}

.setName {
  width: 510rpx;
  font-size: 36rpx;
  font-family: SourceHanSansCN, SourceHanSansCN;
  font-weight: bold;
  color: #FFFFFF;
  padding: 12rpx 0 4rpx 30rpx;
  -webkit-line-clamp: 1;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.setdes {
  width: 456rpx;
  font-size: 24rpx;
  font-family: SourceHanSansCN, SourceHanSansCN;
  font-weight: 400;
  color: #FFFFFF;
  padding-left: 30rpx;
  -webkit-line-clamp: 1;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.jiao {
  width: 152rpx;
  height: 80rpx;
  font-size: 32rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 60rpx;
  text-shadow: 0px 2px 4px rgba(0, 0, 0, 0.14);
  text-align: center;
  position: absolute;
  right: -18rpx;
  top: -1rpx;
}

.activated-setMeal-title {
  color: #222222;
}

.defunct-setMeal-title {
  color: #CCCCCC;
}

.state {
  width: 90rpx;
  height: 40rpx;
}

.setContent {
  width: 636rpx;
  background: #F6FAFE;
  border-radius: 20rpx;
  margin: 26rpx auto;
  padding: 26rpx 0;
}

.intitle {
  padding: 0 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.introduce {
  /* padding: 0 24rpx; */
  font-size: 28rpx;
  font-weight: 400;
  color: #616362;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
}

.inth {
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-bottom: 30rpx;
}

.inth-state {
  font-size: 28rpx;
  font-family: SourceHanSansCN, SourceHanSansCN;
  font-weight: 600;
  color: #505050;
}

.inth-code {
  width: 136rpx;
  height: 56rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  text-align: center;
  font-family: SourceHanSansCN, SourceHanSansCN;
  font-weight: bold;
  color: #322D38;
  line-height: 58rpx;
  margin-left: 14rpx;
}

.inth-code1 {
  background: #CBE4FC;
}

.inth-code2 {
  background: #FFDE73;
}

.inth-code3 {
  background: #9EF399;
}

.int-time {
  padding: 0 24rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #616362;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
}

.aa {
  -webkit-line-clamp: 1;
  /* 文本位置只保留一行 */
  text-overflow: ellipsis;
  /* 溢出文本省略号代替 */
  display: -webkit-box;
  /*  */
  -webkit-box-orient: vertical;
  /*  */
  overflow: hidden;
  /* 溢出隐藏 */
}

.lable {
  font-size: 28rpx;
  font-family: SourceHanSansCN, SourceHanSansCN;
  font-weight: 600;
  color: #505050;
}

.period {
  font-size: 28rpx;
  font-family: SourceHanSansCN, SourceHanSansCN;
  font-weight: 500;
  color: #322D38;
  line-height: 42rpx;
}

.price {
  font-size: 56rpx;
  font-family: Oswald, Oswald;
  font-weight: bold;
  color: #322D38;
}

.price-activated {
  color: #3476FF;
}

.price-defunct {
  color: #CCCCCC;
}

.price::before {
  content: '¥';
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.operation {
  width: 620rpx;
  height: 96rpx;
  background: linear-gradient(170deg, #055BF2 0%, #3476FF 100%);
  box-shadow: inset 0rpx 2rpx 2rpx 0rpx rgba(255, 255, 255, 0.5);
  border-radius: 48rpx;
  border: 1rpx solid;
  text-align: center;
  font-size: 38rpx;
  font-family: SourceHanSansCN, SourceHanSansCN;
  color: #FFFFFF;
  line-height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  margin: 0 auto;
}

.activated-operation {
  background: #3476FF;
  color: #FFFFFF;
}

.used-operation {
  background: white;
  color: #3476FF;
  border: 1rpx solid #3476FF;
}

.pages::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

.page::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}