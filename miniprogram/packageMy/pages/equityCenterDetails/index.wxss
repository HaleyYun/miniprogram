.oper {
  font-size: 28rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  color: #2050B4;
  margin: 10rpx 0 10rpx 65rpx;
}

.notes {
  width: 516rpx;
  background: #F4F7FD;
  border-radius: 16rpx;
  margin-left: 65rpx;
  padding: 10rpx 20rpx;
}

.notes text:nth-child(1) {
  font-size: 24rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  color: #7E7F86;
}

.notes text:nth-child(2) {
  font-size: 24rpx;
  font-family: PingFangSC, PingFang SC;
  font-weight: 400;
  color: #090E30;
}




.btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 176rpx;
  padding: 10rpx 32rpx;
  box-sizing: border-box;
  background: #FFFFFF;
  box-shadow: 0rpx -6rpx 16rpx 0rpx rgba(0, 0, 0, 0.12);
  z-index: 9;
}


