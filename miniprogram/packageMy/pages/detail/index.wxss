.swiper{
  width: 686rpx;
  height: 352rpx;
  margin: 0 auto;
  border-radius: 20rpx;
}
.swiper-image{
  width: 686rpx;
  height: 352rpx;
  border-radius: 20rpx;
}
.detailPic{
  width: 100%;
}
.detailPic-box{
  padding-bottom: 168rpx;
  margin-top: 36rpx;
}
.indicator{
  height: 0;
  position: relative;
}
.indicate{
  width: 70rpx;
  height: 36rpx;
  background-color: white;
  position: absolute;
  z-index: 9;
  border-radius: 4rpx;
  top: -56rpx;
  right: 53rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #222222;
  text-align: center;
}
.detailtitle{
  height: 34rpx;
  font-size: 24rpx;
  margin-bottom: 20rpx;
  font-weight: 400;
  color: #9F9F9F;
  display: flex;
  align-items: center;
  justify-content: center;
}
.barre{
  height: 1rpx;
  width: 30rpx;
  background-color: #9F9F9F;
}
.word{
  margin: 0 15rpx;
}
.bookmark{
  width: 686rpx;
  height: 232rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin: 0 auto;
  margin-top: 32rpx;
  padding: 36rpx;
  box-sizing: border-box;
}
.bookmark view:nth-child(1){
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.price{
  font-size: 50rpx;
  font-weight: bold;
  color: #FF5A00;
}
.price::before{
  content: '¥';
  font-size: 26rpx;
  margin-bottom: 10rpx;
}
.volume{
  font-size: 24rpx;
  font-weight: 400;
  color: #A2A2A2;
  margin-bottom: 30rpx;
}
.name{
  font-size: 32rpx;
  font-weight: bold;
  color: #222222;
  -webkit-line-clamp: 2;				/* 文本位置只保留两行 */
  text-overflow: ellipsis;			/* 溢出文本省略号代替 */
  display: -webkit-box;				/*  */
  -webkit-box-orient: vertical;		/*  */
  overflow: hidden;					/* 溢出隐藏 */
}
.purchase{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 168rpx;
  box-sizing: border-box;
  background-color: white;
  padding: 36rpx 60rpx 54rpx;
  display: flex;
  justify-content: space-between;
}
.purchase view:nth-child(1){
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.contact{
  width: 35rpx;
  height: 35rpx;
}
.service{
  font-size: 20rpx;
  font-weight: 400;
  color: #7D7D7D;
}
.purchase-button{
  width: 504rpx;
  height: 78rpx;
  background-color: #FF5A00;
  border-radius: 39rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #FFFFFF;
}
.purchase-ment{
  width: 625rpx;
  height: 78rpx;
  background-color: #3476FF;
  border-radius: 39rpx;
  /* display: flex; */
  /* align-items: center; */
  /* justify-content: center; */
  font-size: 28rpx;
  font-weight: bold;
  color: #FFFFFF;
}
.addinfodialog{
  position: relative;
  width: 582rpx;
}
.addinfobg{
  width: 582rpx;
  height: 650rpx;
}
.addinfobut-box{
  height: 0;
  position: relative;
}
.addinfobut{
  position: absolute;
  top: -164rpx;
  left: 44rpx;
  width: 498rpx;
  height: 122rpx;
}
.deleteicon{
  position: absolute;
  top:14rpx;
  left: 18rpx;
  width: 50rpx;
  height: 50rpx;
}
.deleteItem{
  width: 50rpx;
  height: 50rpx;
}