/* packageHome/pages/article/index.wxss */
.page{
  height: 100%;
  background-color: #fff;
}
.top{
  display: flex;
  height:138rpx;
  padding:22rpx 38rpx 0 40rpx;
  justify-content: space-between;
  border-bottom: 1rpx solid #97979722;
}
.top-l{
  width: 500rpx;
  display: flex;
  justify-content: space-between;
}
.souce{
  color: #3B3B3B;
  font-size: 32rpx;
  line-height: 44rpx;
  font-weight: bold;
  margin-top: 8rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1; 
  overflow: hidden;
}
.time{
  font-size: 24rpx;
  font-weight: 400;
  color: #828284;
  line-height: 34rpx;
}
.img{
  width:96rpx;
  height:96rpx;
  border-radius: 50%;
}
.cont{
  margin-top: 8rpx;
  /* margin-left:20rpx; */
}
.read{
  width: 164rpx;
  height: 60rpx;
  background: #EDF4FF;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  color: #3476FF;
  line-height: 34rpx;
  margin-top: 20rpx;
}
.title{
  font-size: 48rpx;
  font-weight: bold;
  line-height: 66rpx;
  margin-top: 18rpx;
  padding:22rpx 38rpx 0 40rpx;
}

.rich-content{
  width: 100%;
  box-sizing: border-box;
  padding:22rpx 38rpx 0 40rpx;
  background: #fff;
}
.reverse{
  width: 100%;
  height: 100vh;
  background: #010101;
  display: flex;
  flex-direction: column;
}
.video{
  width: 100%;
  height: 93vh;
  margin-top: -50rpx;
}
.video-msg{
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 0;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
}
.playnum{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 18rpx;
}
.playnum-img{
  width: 34rpx;
  height: 36rpx;
  margin: 0 8rpx 0 24rpx;
  vertical-align: middle;
  margin-bottom: 4rpx;
}
.playnum-text{
  font-size: 32rpx;
  font-weight: 500;
  color: #A49E9E;
  line-height: 44rpx;
  margin-top: 4rpx;
}
.video-content{
  width: 700rpx;
  margin: 0 auto;
  height: fit-content;
  margin-bottom: 100rpx;
}
.video-articleSource{
  margin-bottom: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 44rpx;
  /* text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; 
  overflow: hidden; */
}
.video-theme{
  margin-bottom: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #E7E7E7;
  line-height: 40rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; 
  overflow: hidden;
}
.z-index{
  position: relative;
  z-index: 999;
}
.video-contentDetails{
  max-height: 238rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #E7E7E7;
  line-height: 34rpx;
  margin-bottom: 8rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 7; 
  overflow: hidden;
}
.height0{
  height: 0;
}
.video-unpack{
  font-size: 24rpx;
  font-weight: 400;
  color: #A49E9E;
  line-height: 34rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.unpack-t{
  position: relative;
  top: -23rpx;
}
.unpack-b{
  position: relative;
  top: 0;
}
.video-releaseTime{
  font-size: 22rpx;
  font-weight: 400;
  color: #A49E9E;
  line-height: 32rpx;
  margin-bottom: 18rpx;
}
.controls{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.playPause{
  width: 44rpx;
  height: 46rpx;
  margin-right: 10rpx;
}
.schedule{
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-grow: 1;
}
.progressbar{
  width: 420rpx;
  height: 4rpx;
  background-color: #4A4A4A;
  display: flex;
  align-items: center;
}
.progress{
  height: 4rpx;
  background-color: #FFFFFF;
}
.ball{
  width: 16rpx;
  height: 16rpx;
  background: #FFFFFF;
  border-radius: 50%;
  margin-left: -8rpx;
}