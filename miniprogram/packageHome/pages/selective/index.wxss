/* packageHome/pages/order/index.wxss */
.page{
  background-color: #F3F4F6;
}
.subscribe-person{
  width:686rpx;
  margin: 30rpx auto;
}
.top{
  width:686rpx;
  display: flex;
  justify-content: space-between;
}
.title{
  font-size: 36rpx;
  font-weight: bold;
  color: #222222;
  line-height: 50rpx;
}
.choose{
  /* display: flex; */
  padding:2rpx 15rpx  2rpx 30rpx;
  /* width:165rpx; */
  height:50rpx;
  line-height: 50rpx;
  border-radius: 20px;
  border:1px solid #fff;
  background: rgba(255,255,255,0.36);
  box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(0,0,0,0.09);
}
.text{
  width: 166rpx;
  height: 52rpx;
  background: rgba(255,255,255,0.36);
  box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(0,0,0,0.09);
  border-radius: 26rpx;
  border: 1rpx solid #FFFFFF;
  font-size: 26rpx;
  font-weight: 400;
  color: #222222;
  line-height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.img{
  width: 24rpx;
  height: 24rpx;
  margin-left: 2rpx;
}
.person{
  width: 686rpx;
  height: 132rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  margin: 32rpx auto 0;
  padding:24rpx;
  box-sizing: border-box;
  display: flex;
}
.person-img,.per-name{
  display: flex;
  align-items: center;
}
.headbg{
  width:84rpx;
  height:84rpx;
  border-radius: 8rpx;
  margin-right: 30rpx;
}
.bg{
  width: 84rpx;
  height: 84rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.name{
  font-size: 32rpx;
  font-weight: bold;
  color: #222222;
  line-height: 44rpx;
  margin: 4rpx 0 0 0;
}
.box{
  width: 80rpx;
  height: 35rpx;
  margin:10rpx;
  color:#646363;
  font-size: 10px;
  text-align: center;
  line-height: 35rpx;
  background: #F3F4F6;
  border-radius: 16rpx 16rpx 16rpx 0rpx;
}
.blue{
  color: #3476FF;
}
.black{
  color: #222222;
}
.phone{
  font-size: 20rpx;
  font-weight: bold;
  color: #6E6E6E;
  line-height: 28rpx;
  margin-top: 2rpx;
}
.person-btn{
  width: 96rpx;
  height: 52rpx;
  background: #F3F4F6;
  border-radius: 6rpx;
  text-align: center;
  color:#222;
  font-size: 12px;
  line-height: 52rpx;
  margin-top:18rpx;
}

.subscribe-map{
  width:686rpx;
  margin: 42rpx auto 0;
}
.showPerson{
 width: 686rpx;
height: 338rpx;
background: #FFFFFF;
border-radius: 24rpx;
margin: 32rpx auto 0;
padding:24rpx;
box-sizing: border-box;
display: flex;
}
.showUrl{
  display: flex;
  justify-content: center;
  position: relative;
  width: 650rpx;
  height: 302rpx;
  border-radius: 8rpx;
}
.showBg{
  width: 650rpx;
  height: 302rpx;
  border-radius: 8rpx;
}
.deleteicon{
  position: absolute;
  bottom: 1px;
  /* left: 125px; */
  border-radius: 8rpx;
}
.deleteItem{
  width: 214rpx;
  height: 96rpx;
}
