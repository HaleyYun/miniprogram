.search{
  width:750rpx;
  height:130rpx;
  background:#fff;
  border:1px solid #fff;
}
.doctor-box{
  width: fit-content;
  margin: 0 auto;
  margin-top: 200rpx;
  display: flex;
  flex-direction: column;
}
.load{
  height: 582rpx;
  width: 100%;
  margin-top: 15vh;
}
.doctortext{
  margin-top: 50rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #666666;
  text-align: center;
}
.doctor{
  width: 378rpx;
  height: 320rpx;
  margin: 0 auto;
  transform: translate(-60rpx);
}
.search-box{
  width: 686rpx;
  height: 64rpx;
  background: #F3F4F6;
  border-radius: 32rpx;
  margin:30rpx auto;
  border:1px solid #F3F4F6;
  display: flex;
}
.search-icon{
  width:38rpx;
  height:38rpx;
  margin:15rpx 0rpx 0rpx 30rpx;
}
.search-input{
  width:600rpx;
  height:40rpx;
  line-height: 40rpx;
  font-size: 14px;
  color:#999;
  margin:13rpx;
}
.top{
  width:680rpx;
  height:100rpx;
  margin:20rpx auto;
}
.title{
  height:60rpx;
  font-size: 18px;
  font-weight: bold;
  color:#222;
}
.text{
  font-size: 12px;
  color: #5F6062;
}
.count{
  width:616rpx;
  height:75rpx;
  padding: 35rpx;
  margin: auto;
  background-color: #fff;
  border-radius: 10px;
  display: flex;
  justify-content: space-between;
}
.count-one{
  width:205rpx;
  height:75rpx;
  text-align: center;
}
.line{
  border-left: 1px solid #d4d4d4;
  border-right: 1px solid #d4d4d4;
}
.count-text{
  font-size: 12px;
  color:#5f6062;
}
.count-num{
  font-size: 14px;
  color:#222;
  font-weight: bold;
}

.card{
  width:616rpx;
  height:300rpx;
  padding:35rpx;
  background-color: #fff;
  border-radius: 10px;
  margin: 30rpx auto;
}
.card-top{
  width:616rpx;
  height:50rpx;
  display: flex;
  justify-content: space-between;
}
.top-name{
  width:fit-content;
  height:50rpx;
  display: flex;
}
.name{
  font-size: 18px;
  color:#222;
  font-weight: bold;
}
.status{
  width: 110rpx;
  height: 38rpx;
  line-height: 38rpx;
  background: #18C86D;
  border-radius: 22rpx;
  text-align: center;
  color:#fff;
  font-size: 11px;
  margin:10rpx;
}
.orange{
  background-color: #EE952D !important;
}
.oran{
  color:#EE952D !important;
}
.top-time{
  font-size: 12px;
  color:#999;
}
.card-count{
  width: 575rpx;
  height: 95rpx;
  background: #F2F8FF;
  border-radius: 16rpx;
  margin-top:30rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}
.remarks{
  font-size: 14px;
  font-weight: bold;
  color: #4B759F;
}
.green{
  color:#18C86D;
  font-size: 16px;
  font-weight: bold;
}
.button{
  width:618rpx;
  height:80rpx;
  border:1px solid #3476ff;
  border-radius: 10px;
  margin:20rpx auto;
  text-align: center;
  line-height: 80rpx;
  color:#3476ff;
  font-size: 16px;
  font-weight: bold;
}
.remarks-text{
  white-space: nowrap;/* 文本不换行，一行展示 */
  overflow: hidden;/* 溢出隐藏 */
  text-overflow: ellipsis;/* 溢出文本省略号代替 */
}



.bot{
  width:415rpx;
  height: 30rpx;
  margin: 30rpx auto;
}
.botbg{
  width:415rpx;
  height: 30rpx;
}