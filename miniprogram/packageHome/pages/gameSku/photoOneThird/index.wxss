.photo-content {
  width: 100%;
  min-height: 812rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.picture {
  height: auto;
  display: flex;
  align-content: center;
  flex-wrap: wrap;
  padding: 20rpx 50rpx;
}

.ph-picture {
  width: 50%;
  height: 340rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-repeat: no-repeat;
  position: relative;
  background-size: 100% 100%;
}

.ph-picture .pic {
  width: 220rpx;
  height: 220rpx;
}

.ph-picturebg {
  width: 50%;
  height: 340rpx;
}

.pic {
  width: 340rpx;
  height: 340rpx;
}

.doctor {
  display: flex;
  margin-top: 130rpx;
}

.doctor-bg {
  width: 97%;
  height: 320rpx;
  margin-top: 40rpx;
}

.doctor-bg image {
  margin-left: 30rpx;
  width: 212rpx;
  height: 312rpx;
}

.doctor-text {
  height: 180rpx;
  border-radius: 50rpx;
  margin-top: 100rpx;
  margin-left: 30rpx;
  padding: 24rpx;
  text-align: left;
  background: linear-gradient(133deg, #FFF7EA 0%, #FFF7EA 100%);
  box-shadow: 0 4rpx 6rpx 0 rgba(0, 0, 0, 0.12), inset 0 -6rpx 6rpx 2rpx #E1CEBB;
  border: 3px solid #968273;
  font-size: 32rpx;
  color: #7D4742;
  line-height: 44rpx;
  letter-spacing: 2rpx;
  position: relative;
  z-index: 0;
}

span {
  font-size: 50rpx;
  font-weight: bold;
}

.doctor-text:before {
  border-style: solid;
  border-width: 20rpx 0 20rpx 20rpx;
  border-color: transparent transparent transparent #FFF7EA;
  content: "";
  position: absolute;
  top: 50%;
  right: -16rpx;
  margin-top: -18rpx;
  display: block;
  width: 0;
  height: 0;
  z-index: 0;
}

.doctor-text:after {
  border-style: solid;
  border-width: 22rpx 0 22rpx 22rpx;
  border-color: transparent transparent transparent #968273;
  content: "";
  position: absolute;
  top: 50%;
  right: -24rpx;
  margin-top: -20rpx;
  display: block;
  width: 0;
  height: 0;
  z-index: -1;
}

.flipInY {
  animation-iteration-count: 1;
  -webkit-animation-iteration-count: 1;
}

.bigDiv{
  position: relative;
  top: 160rpx;
}