.content {
  width: 100%;
  min-height: 812rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-position: center;
}

.con-doc {
  display: flex;
  margin-top: 150rpx;
}

.con-doctor {
  width: 306rpx;
  height: 408rpx;
  margin-top: 200rpx;
}

.con-doctor image {
  width: 306rpx;
  height: 408rpx;
}

.con-text {
  width: 560rpx;
  height: 200rpx;
  border-radius: 50rpx;
  margin-top: 160rpx;
  margin-right: 30rpx;
  padding: 24rpx;
  text-align: left;
  background: linear-gradient(133deg, #FFF7EA 0%, #FFF7EA 100%);
  box-shadow: 0 4rpx 6rpx 0 rgba(0, 0, 0, 0.12), inset 0px -6rpx 6rpx 2rpx #E1CEBB;
  border: 6rpx solid #968273;
  font-size: 32rpx;
  color: #7D4742;
  line-height: 44rpx;
  letter-spacing: 2rpx;
  position: relative;
  z-index: 0;
}

.con-text:before {
  border-style: solid;
  border-width: 20rpx 20rpx 20rpx 0;
  border-color: transparent #FFF7EA transparent transparent;
  content: "";
  position: absolute;
  top: 50%;
  left: -16rpx;
  margin-top: -18rpx;
  display: block;
  width: 0;
  height: 0;
  z-index: 0;
}

.con-text:after {
  border-style: solid;
  border-width: 22rpx 22rpx 22rpx 0;
  border-color: transparent #968273 transparent transparent;
  content: "";
  position: absolute;
  top: 50%;
  left: -24rpx;
  margin-top: -20rpx;
  display: block;
  width: 0;
  height: 0;
  z-index: -1;
}

.hand {
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  left: 40rpx;
  top: 460rpx;
}

.hand image {
  width: 160rpx;
  height: 170rpx;
}

.con-down {
  display: flex;
  justify-content: center;
}

.con-down image {
  width: 164rpx;
  height: 226rpx;
}

.con-start {
  width: 470rpx;
  height: 180rpx;
  margin: 90rpx auto;
}

.con-start image {
  width: 470rpx;
  height: 180rpx;
}

.con-start {
  position: relative;
  animation: myanimate 5s infinite;
  -webkit-animation: myanimate 5s infinite;
  animation-direction: alternate;
  animation-timing-function: ease-in-out;
  -webkit-animation: myanimate 5s infinite;
  -webkit-animation-direction: alternate;
  -webkit-animation-timing-function: ease-in-out;
}

@keyframes myanimate {
  0% {
    transform: scale(1);
  }

  25% {
    transform: scale(1.2);
  }

  50% {
    transform: scale(1);
  }

  75% {
    transform: scale(1.2);
  }

}

@-webkit-keyframes myanimate {
  0% {
    transform: scale(1);
  }

  25% {
    transform: scale(1.2);
  }

  50% {
    transform: scale(1);
  }

  75% {
    transform: scale(1.2);
  }
}