.photo-content {
  width: 100%;
  min-height: 812rpx;
  background-size: 100%;
  background-repeat: no-repeat;
}

.picture {
  height: auto;
  display: flex;
  align-content: center;
  justify-content: space-between;
  padding: 20rpx 50rpx;
  position: relative;
}

.ph-picture {
  width: 90%;
  height: 584rpx;
  margin: auto;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ph-picture image {
  width: 340rpx;
  height: 340rpx;
}

.fix {
  position: absolute;
  top: 0;
  left: 150rpx;
}
.fix_right {
  position: absolute;
  top: 0;
  right: 150rpx;
}

.btn {
  width: 80%;
  height: 240rpx;
  margin: 30rpx auto 20rpx;
  display: flex;
  align-content: center;
  justify-content: space-between;
}

.btn image {
  width: 180rpx;
  height: 180rpx;
}

.btn button::after{
  border: none;
}

.doctor {
  display: flex;
  margin-top: -50rpx;
}

.doctor-bg {
  width: 100%;
  height: 320rpx;
  margin-top: 100rpx;
  position: relative;
}

.doctor-bg image {
  margin-left: 30rpx;
  width: 212rpx;
  height: 312rpx;
}

.doctor-text {
  border-radius: 50rpx;
  margin-top: 100rpx;
  margin-left: 30rpx;
  padding: 24rpx;
  text-align: left;
  background: linear-gradient(133deg, #FFF7EA 0%, #FFF7EA 100%);
  box-shadow: 0 4rpx 6rpx 0 rgba(0, 0, 0, 0.12), inset 0px -6rpx 6rpx 2rpx #E1CEBB;
  border: 6rpx solid #968273;
  font-size: 32rpx;
  color: #7D4742;
  line-height: 44rpx;
  letter-spacing: 2rpx;
  position: relative;
  z-index: 0;
}

.doctor-text:before {
  border-style: solid;
  border-width: 20rpx 0 20rpx 20rpx;
  border-color: transparent transparent transparent #FFF7EA;
  content: "";
  position: absolute;
  top: 50%;
  right: -16rpx;
  margin-top: -18rpx;
  display: block;
  width: 0;
  height: 0;
  z-index: 0;
}

.doctor-text:after {
  border-style: solid;
  border-width: 22rpx 0 22rpx 22rpx;
  border-color: transparent transparent transparent #968273;
  content: "";
  position: absolute;
  top: 50%;
  right: -24rpx;
  margin-top: -20rpx;
  display: block;
  width: 0;
  height: 0;
  z-index: -1;
}

.hand {
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  right: 50rpx;
  bottom: 0;
}
.hand image {
  width: 160rpx;
  height: 170rpx;
}

.bigDiv {
  width: 100%;
  margin-top: 160rpx;
}

.animate__fadeOutBottomLeft {
  -webkit-animation-name: fadeOutBottomLeft;
  animation-name: fadeOutBottomLeft;

  animation-iteration-count: 1;
  -webkit-animation-iteration-count: 1;
}

@-webkit-keyframes fadeOutBottomLeft {
  0% {
    opacity: 1;
    -webkit-transform: translateZ(0);
    transform: scale(0.8, 0.5) translateZ(0);

  }

  to {
    opacity: 0;
    -webkit-transform: translate3d(-50%, 200%, 0);
    transform: scale(0.8, 0.5) translate3d(-50%, 200%, 0);
  }
}

@keyframes fadeOutBottomLeft {
  0% {
    opacity: 1;
    -webkit-transform: translateZ(0);
    transform: scale(0.8, 0.5) translateZ(0);
  }

  to {
    opacity: 0;
    -webkit-transform: translate3d(-50%, 200%, 0);
    transform: scale(0.8, 0.5) translate3d(-50%, 200%, 0);
  }
}

.animate__fadeOutBottomRight {
  -webkit-animation-name: fadeOutBottomRight;
  animation-name: fadeOutBottomRight;

  animation-iteration-count: 1;
  -webkit-animation-iteration-count: 1;
}

@-webkit-keyframes fadeOutBottomRight {
  0% {
    opacity: 1;
    -webkit-transform: translateZ(0);
    transform: scale(0.8, 0.5) translateZ(0);
  }

  to {
    opacity: 0;
    -webkit-transform: translate3d(50%, 100%, 0);
    transform: scale(0.8, 0.5) translate3d(50%, 200%, 0);
  }
}

@keyframes fadeOutBottomRight {
  0% {
    opacity: 1;
    -webkit-transform: translateZ(0);
    transform: scale(0.8, 0.5) translateZ(0);
  }

  to {
    opacity: 0;
    -webkit-transform: translate3d(50%, 100%, 0);
    transform: scale(0.8, 0.5) translate3d(50%, 200%, 0);
  }
}