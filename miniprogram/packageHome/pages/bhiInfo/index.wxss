.page {
  display: flex;
  flex-direction: column;
}

.title {
  padding: 20rpx 50rpx 200rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
}

.btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 176rpx;
  background: #FFFFFF;
  box-shadow: 0rpx -6rpx 16rpx 0rpx rgba(0, 0, 0, 0.12);
}

button {

  width: 588rpx;
  height: 100rpx;
  background: #3476FF;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 100rpx;
}