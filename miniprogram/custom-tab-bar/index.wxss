.tab-bar {
  width: 750rpx;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 0;
  display: flex;
  background: #FFF;
  box-shadow: 0rpx 0rpx 6rpx 0rpx rgba(0, 0, 0, 0.15);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item image {
  width: 60rpx;
  height: 60rpx;
}

.tab-bar-item:nth-child(3) image {
  width: 160rpx;
  height: 198rpx;
  position: absolute;
  top: -90rpx
}

.text {
  font-size: 12px;
  color: #666;
}